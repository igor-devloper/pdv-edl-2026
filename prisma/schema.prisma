generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id         Int     @id @default(autoincrement())
  sku        String  @unique
  name       String
  priceCents Int
  costCents  Int? // opcional
  active     Boolean @default(true)

  stockOnHand Int      @default(0) // estoque atual (derivado/atualizado via movimentos)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  saleItems SaleItem[]
  movements StockMovement[]
}

model Sale {
  id            Int           @id @default(autoincrement())
  code          String        @unique // ex: EDL-000123
  sellerUserId  String // Clerk userId
  status        SaleStatus    @default(PAID)
  nomeComprador String?
  totalCents    Int
  payment       PaymentMethod

  createdAt DateTime   @default(now())
  items     SaleItem[]
}

model SaleItem {
  id         Int @id @default(autoincrement())
  saleId     Int
  productId  Int
  qty        Int
  unitCents  Int
  totalCents Int

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model StockMovement {
  id          Int               @id @default(autoincrement())
  productId   Int
  type        StockMovementType
  qty         Int // + entrada / - sa√≠da
  note        String?
  actorUserId String // Clerk userId

  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}

enum SaleStatus {
  PAID
  CANCELED
}

enum PaymentMethod {
  PIX
  CASH
  CARD
}

enum StockMovementType {
  IN
  OUT
  ADJUST
}
